<h1>Listing brands</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td><%= brand.description %></td>
        <td><%= link_to 'Show', [:admin, brand] %></td>
        <td><%= link_to 'Edit', edit_admin_brand_path(brand) %></td>
        <td><%= link_to 'Destroy', [:admin, brand], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

